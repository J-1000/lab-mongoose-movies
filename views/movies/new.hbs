<h2>Add new movies to your database ✨</h2>

<form action="/movies" method="POST">
    <label for="title">Title: </label>
    <input type="text" name="title" id="title"> 
    
    <label for="genre">Genre: </label>
    <input type="text" name="genre" id="genre"> 

    <label for="plot">Plot: </label>
    <input type="text" name="plot" id="plot"> 

    <label for="cast">Select the Cast: </label>
    {{!-- <input type="text" name="cast" id="cast">  --}}
    <select name="cast" id="cast" multiple>
        <option value=""></option>
        {{#each allCelebrities}}
        <option value ="{{_id}}">{{name}}</option>
        {{/each}}
    </select>
    {{!-- each all celeb => select select außerhalb des loops damit cmd+C oder extra feature alle auswählbar --}}

    <button type="submit">Add</button>
</form>

