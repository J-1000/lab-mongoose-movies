<h2>Enter new movie</h2>
 <div class="result-card highlight">
    <form action="/movies" method="POST" class="form">

      <label for="title">Title</label>
      <input type="text" name="title" id="title" value= "">

      <label for="director">Director</label>
      <input type="text" name="director" id="director" value="">

      <label for="year">Year</label>
      <input type="text" name="year" id="year" value="">

      <label for="genre">Genre</label>
      <input type="text" name="genre" id="genre" value="">

      <label for="plot">Plot</label>
      <input type="text" name="plot" id="plot" value="">
    
      <label for="cast">Cast</label>
      <select name="cast" multiple>
          {{#each cast}}
            <option value="{{this._id}}">{{this.name}}</option>
          {{/each}}
      </select>
       <button type="submit" >Add movie</button>
    </form>
</div>