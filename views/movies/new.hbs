<h1>Add a movie</h1>

<form action="/movies" method="POST" id='button'>
  <label for="title">Title</label>
  <input type="title" id="title" name="title"><br>
  <label for="genre">Genre</label>
  <input type="text" id="genre" name="genre"><br>
   <label for="plot">Plot</label>
   <input type="text" id="plot" name="plot"><br>
  <label for="cast">Cast</label>
 <select name="cast" id="cast" multiple>
     {{#each celebritiesNames}}
  <option value="{{this}}">{{this}}</option>
     {{/each}}

</select>


</form>

<button type="submit" form="button" value="Submit">Submit</button>
