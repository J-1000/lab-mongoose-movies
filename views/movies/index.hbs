<h2>Movies List</h2>
<p><a href="/movies/new">Add a Movie</a></p>

{{#each movies}}
  <h3>Name: {{title}}</h3>
  <p>Genre: {{genre}}</p>
  <p>Plot: {{plot}}</p>

  {{#if celebrities}}
    <ul>
      <h4>Cast</h4>
      {{#each celebrities}}
        <li>{{this.name}}</li>
      {{/each}}
    </ul>
    {{!-- {{else}}
      <p>No cast available for this movie</p> --}}
  {{/if}}

  <p><a href="/movies/{{_id}}/edit">Edit</a></p>
  <form action="/movies/{{_id}}/delete" method="POST">
    <button type="submit">Delete</button>
  </form>
{{/each}}

<a href="/"><button>Back</button></a>