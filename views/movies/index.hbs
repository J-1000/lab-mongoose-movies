<h2>Movies List</h2>
{{#each movies}}
  <p><a href="/movies/{{this._id}}">{{this.title}}</a></p>
  <p>Genre: {{this.genre}}</p>
  <p>Plot: {{this.plot}}</p>
  <p><ul>
    {{#each this.cast}}
    <li>{{this.name}} {{this.lastName}} </li>
    {{/each}}
  </ul>
  </p>
  <a href="/movies/{{this._id}}/edit">Edit </a>

  <form action="/movies/{{this._id}}/delete" method="POST">
    <button>Delete</button>
  </form>
{{/each}}

<a href="/movies/new">Add a movie</a> 