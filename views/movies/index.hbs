<h2>{{title}}</h1>
<h3>Click on the movie title for more details</h3>

<div id="movies">
  {{#each moviesFromDB}}
  <div id="movie">
    <a href="/movies/{{_id}}"><p>{{title}}</p></a>
    <p>{{genre}}</p>
    <form action="/movies/{{_id}}/delete" method="POST">
      <button>Delete movie</button>
    </form>
  </div>
  {{/each}}
</div>