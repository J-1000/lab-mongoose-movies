
  <h1>Edit {{movie.title}}: </h1>
  
  <form class="container-col form-container" action="/movies/{{movie._id}}/edit" method="post">

    <label for="title">Title: </label>
    <input type="text" name="title" id="title" value="{{movie.title}}">
 
     <label for="genre">Genre: </label>
    <input type="text" name="genre" id="genre" value="{{movie.genre}}">

    <label for="plot">Plot: </label>
    <input type="text" name="plot" id="plot" value="{{movie.plot}}">

    <label for="cast">Cast: </label>
    <select name="cast" id="cast" multiple>
      {{#each celebsInMovie}}
          <option value="{{this._id}}" selected>{{this.name}}</option>
      {{/each}}
       
      {{#each restOfCelebs}}
          <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>

    <div class="container-row container-button">
      <button type="submit">Update Movie!!</button>
    </div>
    
  </form>
