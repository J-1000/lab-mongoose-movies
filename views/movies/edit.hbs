<h1>Edit</h1>

<form method="POST">


  {{#with movie}}

  <label for="title">Title: </label>
  <input type="text" name="title" id="title" value="{{title}}">

  <label for="genre">Genre: </label>
  <input type="text" name="genre" id="genre" value="{{genre}}">

  <label for="plot">Plot: </label>
  <input type="text" name="plot" id="plot" value="{{plot}}">
  {{/with}}


  <p>Cast:</p>

  {{#each celebrities}}
  <div>
    <input type="checkbox" id="celebrity-{{_id}}" name="cast[]" value="{{_id}}" {{#if selected}} checked {{/if}}>
    <label for="celebrity-{{_id}}">{{name}}</label>
  </div>
  {{/each}}

  <button type="submit">Save</button>
</form>