<h2>Edit this celebrity</h2>
{{#with movie}}
<form action="/movies/{{_id}}" method="POST">
  <label for="title">Title: </label>
  <input type="text" name="title" id="title" value="{{title}}">

  <label for="genre">Genre: </label>
  <input type="text" name="genre" id="genre" value="{{genre}}">

  <label for="plot">Plot: </label>
  <input type="text" name="plot" id="plot" value="{{plot}}">

  <button type="submit">Update the movie</button>

  <label for="celebrity">Cast: </label>
  <select name="celebrity" id="celebrity" multiple>
    {{#each cast}}
      <option value="{{this._id}}" selected>{{this.name}}</option>
    {{/each}}
  </select>

</form>
{{/with}}

