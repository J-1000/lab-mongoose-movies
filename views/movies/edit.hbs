<h2>Edit this movie</h2>
<form action="/movies/edit/{{movie._id}}" method="POST">
  {{#with movie}}
  <label for="title">Title: </label>
  <input type="text" name="title" id="title" value="{{title}}">

  <label for="genre">Genre: </label>
  <input type="text" name="genre" id="genre" value="{{genre}}">

  <label for="plot">Plot: </label>
  <input type="text" name="plot" id="plot" value={{plot}}>

  <label for="cast">Casts: </label>
   {{/with}}

  <select name="cast" id="cast" multiple>
    {{#each listNames}}
      <option value="{{id}}" {{#if included}} selected {{/if}}>{{celebName}}</option>
    {{/each}}
  </select>

  <button type="submit">Add a movie</button>
</form>
