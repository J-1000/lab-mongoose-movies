<h2>Edit movie</h2>
<form action="/movies/{{movieDetails._id}}/edit" method="post">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="{{movieDetails.title}}">
  <label for="genre">Genre:</label>
  <input type="text" name="genre" id="genre" value="{{movieDetails.genre}}">
  <label for="plot">Plot:</label>
  <input type="text" name="plot" id="plot" value="{{movieDetails.plot}}">
  <label for="cast">Cast:</label>
  <select name="cast" id="cast" multiple>
    {{#each celebrityList}}
    <option value="{{_id}}" {{selected ../movieDetails.cast _id}}>{{name}}</option>
    {{/each}}
  </select>
  <button type="submit">Edit Movie</button>
</form>