<h1>Edit the movie</h1>
{{#with movie}}
<form action="/movies/{{_id}}/edit" method="POST">
<ul>
  <li>
  <label for="title">Title: </label>
  <input type="text" name="title" id="title" value={{title}}>
  </li>
  <li>
  <label for="genre">Genre: </label>
  <input type="text" name="genre" id="genre" value={{genre}}>
  </li>
  <li>
  <label for="plot">Plot: </label>
  <input type="text" name="plot" id="plot" value={{plot}}>
   </li>
   <li>
  <select name="celebrity" multiple>
    {{#each this.cast}}
      <option value="{{this.name}}">{{this.name}}</option>
    {{/each}}
  </select>
  </li>
  <button type="submit">Edit the Movie</button>

  </ul>
</form>

{{/with}}