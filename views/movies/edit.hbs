<h2>{{title}}</h1>

<div id="movies">
  {{#with movie}}
  <form action="/movies/{{_id}}" method="POST">
    <label for="title">Title: </label><input id="title" type="text" name="title" value="{{title}}">
    <label for="genre">Genre: </label><input id="genre" type="text" name="genre" value="{{genre}}">
    <label for="plot">Plot: </label><input id="plot" type="text" name="plot" value="{{plot}}">
  {{/with}}
    <label for="cast">Cast: </label>
    <select id="cast" name="cast" multiple>
      {{#each celebsInMovie}}
          <option value="{{_id}}" selected>{{name}}</option>
      {{/each}}
      {{#each celebsNotInMovie}}
          <option value="{{_id}}">{{name}}</option>
      {{/each}}
	  </select>
    <button id="btn-submit">Edit movie</button>
  </form>
</div>