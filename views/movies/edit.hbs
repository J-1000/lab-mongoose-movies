{{#with movie}}

<h2>Edit {{this.title}}:</h2>

<form action="/movies/{{this.id}}" method="POST">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="{{this.title}}">

  <label for="genre">Genre:</label>
  <input type="text" name="genre" id="genre" value="{{this.genre}}">

  <label for="plot">Plot:</label>
  <input type="text" name="plot" id="plot" value="{{this.plot}}">

  <label for="cast">Cast:</label>
  <select name="cast" multiple>
    {{#each this.cast}}
    <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>

  <button type="submit">Submit changes</button>
</form>

{{/with}}



