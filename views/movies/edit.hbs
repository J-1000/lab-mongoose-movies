<h2>Edit movie</h2>

{{#with movie}}

      <div class="result-card highlight">
      <form action="/movies" method="POST" class="form">

      <label for="title">Title</label>
      <input type="text" name="title" id="title" value= "{{title}}">

      <label for="director">Director</label>
      <input type="text" name="director" id="director" value="{{director}}">

      <label for="year">Year</label>
      <input type="text" name="year" id="year" value="{{year}}">

      <label for="genre">Genre</label>
      <input type="text" name="genre" id="genre" value="{{genre}}">

      <label for="plot">Plot</label>
      <input type="text" name="plot" id="plot" value="{{plot}}">

{{/with}}

      <label for="cast">Cast</label>
      <select name="cast" id="cast" multiple>
          {{#each cel}}
                  <option value="{{this._id}}" selected>{{this.name}} {{this.lastName}}</option>
          {{/each}}
      </select>
       <button type="submit" >Save</button>
    </form>
</div>