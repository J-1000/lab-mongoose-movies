<h2> Celebrities!</h2>

  {{#each celebrities}}
  <h3>{{this.name}}</h3>
  <div>
    <a href="/celebrities/{{_id}}"> View Celebrities </a>
  </div>
  <div>
    <a href="/celebrities/new"> Add celebrities </a>
  </div>
  <div>
      <form action="/celebrities/{{this._id}}/delete" method="POST">
      <button type="submit">Delete celebrity</button>
      <a href="/celebrities/{{_id}}/edit">Edit</a>
  </div>
{{/each}}

