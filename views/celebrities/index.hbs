<h2>{{title}}</h1>
<h3>Click on the celebrity name for more details</h3>

<div id="celebrities">
  {{#each celebritiesFromDB}}
  <div id="celebrity">
    <a href="/celebrities/{{_id}}"><p>{{name}}</p></a>
    {{!-- <p>{{occupation}}</p>
    <p>{{catchPhrase}}</p> --}}
    <form action="/celebrities/{{_id}}/delete" method="POST">
      <button>Delete celebrity</button>
    </form>
  </div>
  {{/each}}
</div>