<h2>This is the list of celebrities</h2>

{{#each allCelebrities}}

<h3><a href="/celebrities/{{_id}}">{{name}}</a></h3>

<form action="/celebrities/{{_id}}/delete" method="POST">
  <input type="text" name="id" id="id" value="{{_id}}" style="display: none">
  <button type="submit">Delete this celebrity</button>
</form>



{{/each}}

<button><a href="/celebrities/new">Add a new celebrity to this list</a></button>