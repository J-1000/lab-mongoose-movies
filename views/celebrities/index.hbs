<h1>All the celebrities</h1>
{{#each celebrities}}
	<h2>{{this.name}}</h2>
	<a href="/celebrities/{{this._id}}">Celebrity details</a>
	<form action="/celebrities/{{ this._id }}/delete" method="POST">
    <button type="submit">Delete</button>
    </form>
  <a href="/celebrities/{{ this._id }}/edit">Edit</a>
{{/each}}
<a href="/celebrities/new">Add a celebrity</a>