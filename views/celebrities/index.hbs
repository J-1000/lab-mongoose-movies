<h2>Hello World</h2>
{{#each celebritiesList}}

  <div>{{name}}</div>
  <a href="/celebrities/{{id}}">View Details</a>

  <form action="/celebrities/{{id}}/delete" method="POST">
    <button type="submit">Delete Celebrity</button>
  </form>

  <form action="/celebrities/{{id}}/edit" method="POST">
    <button type="submit">Edit Celebrity</button>
  </form>

{{/each}}

<div>
  <a href="/celebrities/new">Create a new Celebrity</a>
</div>
