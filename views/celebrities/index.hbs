<h2>List of all celebrities</h2>
<ul>
  {{#each celebrityList}}
  <li>
    <a href="/celebrities/{{_id}}">{{name}}</a>
    <form action="/celebrities/{{_id}}/delete" method="post">
      <button type="submit">🗑️</button>
    </form>
    <form action="/celebrities/{{_id}}/edit" method="get">
      <button type="submit">✏️</button>
    </form>
  </li>
  {{/each}}
  <li><a href="/celebrities/new">Add new celebrity</a></li>
</ul>