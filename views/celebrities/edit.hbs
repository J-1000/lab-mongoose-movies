<h2>Edit a Celebrity</h2>
<form action="/celebrities/{{ celebrityDetails._id}}" method="POST">
  <label for="name">Name</label> 
  <input id="name" type="text" name="celebrityname" value="{{ celebrityDetails.name}}">
  
  <label for="occupation">Occupation</label> 
  <input id="occupation" type="text" name="occupation" value="{{ celebrityDetails.occupation}}">
  
  <label for="catchPhrase">Catch Phrase</label> 
  <input id="catchPhrase" type="text" name="catchPhrase" value="{{ celebrityDetails.catchPhrase}}">
  
  <button type="submit">Update</button>
</form>