<h2>Edit these Celebrity Details</h2>
{{#with celebrity}}
<form action="/celebrities/{{id}}" method="POST">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" placeholder="{{name}}">

    <label for="occupation">Occupation:</label>
    <input type="text" name="occupation" id="occupation" placeholder="{{occupation}}">

    <label for="catchPhrase">Catch phrase:</label>
    <input type="text" name="catchPhrase" id="catchPhrase" placeholder="{{catchPhrase}}">
    <button type="submit">Save</button>
</form>
{{/with}}