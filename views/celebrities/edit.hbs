
{{#with celebrity}}

  <form class="container-col form-container" action="/celebrities/edit/{{_id}}" method="post">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="{{name}}">
 
     <label for="occupation">Occupation:</label>
    <input type="text" name="occupation" id="occupation" value="{{occupation}}">

    <label for="catchPhrase">Catch Phrase:</label>
    <input type="text" name="catchPhrase" id="catchPhrase" value="{{catchPhrase}}">

    <label for="imageURL">Image URL:</label>
    <input type="text" name="imageURL" id="imageURL" value="{{imageURL}}">

    <div class="container-row container-button">
      <button type="submit">Add Celebrity!!</button>
    </div>
  </form>

  {{/with}}
  