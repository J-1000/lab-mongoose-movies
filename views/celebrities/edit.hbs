{{#with celebrity}}
<h2>Edit {{this.name}}</h2>

<form action="/celebrities/{{this.id}}" method="POST">
  <label for="name">Name:</label>
  <input type="text" name="name" id="name" value="{{this.name}}">

  <label for="occupation">Occupation:</label>
  <input type="text" name="occupation" id="occupation" value="{{this.occupation}}">

  <label for="catchPhrase">Catch Phrase:</label>
  <input type="text" name="catchPhrase" id="catchPhrase" value="{{this.catchPhrase}}">

  <button type="submit">Submit changes</button>
</form>

{{/with}}