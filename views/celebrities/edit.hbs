<h2>{{title}}</h1>

<div id="celebrities">
  {{#with celebrity}}
  <form action="/celebrities/{{_id}}" method="POST">
    <label for="name">Name: </label><input id="name" type="text" name="name" value="{{name}}">
    <label for="occupation">Occupation: </label><input id="occupation" type="text" name="occupation" value="{{occupation}}">
    <label for="catchPhrase">Catch phrase: </label><input id="catchPhrase" type="text" name="catchPhrase" value="{{catchPhrase}}">
    <button id="btn-submit">Edit celebrity</button>
  </form>
  {{/with}}
</div>